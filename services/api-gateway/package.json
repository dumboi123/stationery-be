{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "API Gateway service for microservices architecture",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --legacy-watch --polling-interval 1000 src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:auth": "jest tests/auth.test.js",
    "test:rate": "jest tests/rateLimiting.test.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "echo 'Build completed successfully'",
    "health-check": "node -e \"require('http').get('http://localhost:3000/health', (res) => process.exit(res.statusCode === 200 ? 0 : 1))\""
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "http-proxy-middleware": "^2.0.6",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "opossum": "^8.0.0",
    "rate-limit-redis": "^4.2.1",
    "redis": "^5.6.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "keywords": [
    "api-gateway",
    "express",
    "microservices",
    "jwt",
    "rate-limiting",
    "circuit-breaker",
    "redis",
    "proxy"
  ],
  "author": "Your Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
